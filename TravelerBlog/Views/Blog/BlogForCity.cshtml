@model IEnumerable<TravelerBlog.Models.BlogPost>
@{
    ViewBag.Title = "BlogForCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-banner">
    <div class="section-banner__bg" style="background-image: url(~/Content/assets/img/bg-banner-blog-grid.jpg)">
        <div class="uk-container">
            <div class="section-banner__content">
                <div class="section-banner__breadcrumb">
                    <ul class="uk-breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li><span>Latest News</span></li>
                    </ul>
                </div>
                <div class="section-banner__title">News Posts </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content">
    <div class="uk-section-large uk-container">
        <div class="uk-grid uk-grid-medium uk-child-width-1-3@m uk-child-width-1-2@s" data-uk-grid>
            @foreach (var post in Model)
            {
                <div class="blog-card">
                    <div class="blog-card__box">
                        <div class="blog-card__media shine"><a href="09_blog-post.html"><img src="~/Content/assets/img/blog-thumb-1.jpg" alt="How To Spend Vacations" /></a></div>
                        <div class="blog-card__body">
                            <div class="blog-card__info">
                                <div class="blog-card__category"> <span class="icon-folder"> </span>Vacations, Break</div>
                                <div class="blog-card__author">Ben Jason</div>
                            </div>
                            @Html.ActionLink(post.Title, "ReadBlogPost", new {blogPostId = post.Id}, new {@class= "blog-card__title" })
                            <div class="blog-card__intro">
                                <p>@post.Content.Substring(0, 100) ...</p>
                            </div>
                        <div class="blog-card__more">@Html.ActionLink("Read more", "ReadBlogPost", new { blogPostId = post.Id }, new { @class = "uk-button uk-button-default" })</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
